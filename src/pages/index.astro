---
// Main index page for The Whole Men Gathering
import WMGLayout from '../layouts/WMGLayout.astro';
import Hero from '../components/Hero.astro';
import WhatIs from '../components/WhatIs.astro';
import Schedule from '../components/Schedule.astro';
import Invite from '../components/Invite.astro';
import SignupForm from '../components/SignupForm.astro';
import InnerCouncil from '../components/InnerCouncil.astro';
import Footer from '../components/Footer.astro';
import mountReveal from '../components/SectionReveal';
---

<WMGLayout>
  <Hero />
  <WhatIs />
  <Schedule />
  <Invite />
  <SignupForm />
  <InnerCouncil />
  <Footer />
</WMGLayout>

<script>
  import mountReveal from '/src/components/SectionReveal.ts';
  if (typeof window !== 'undefined') {
    requestAnimationFrame(() => mountReveal('.reveal'));
  }
</script>
