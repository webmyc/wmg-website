---
// WMGLayout with SEO, JSON-LD structured data, and meta tags
import Analytics from '@vercel/analytics/astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const {
  title = "The Whole Men Gathering - Gene Keys Community for Men",
  description = "Join a global community of men exploring ancient, contemporary and emergent wisdom through the Gene Keys Noble Code. Monthly gatherings every last Tuesday.",
  image = "https://wmg.suuna.org/og/wmg-hero.jpg",
  canonical = Astro.url.href
} = Astro.props;

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://wmg.suuna.org/#organization",
      "name": "The Whole Men Gathering",
      "url": "https://wmg.suuna.org",
      "logo": {
        "@type": "ImageObject",
        "url": "https://wmg.suuna.org/og/wmg-hero.jpg"
      },
      "image": "https://wmg.suuna.org/og/wmg-hero.jpg",
      "sameAs": [],
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "General Inquiry",
        "url": "https://wmg.suuna.org/#signup"
      }
    },
    {
      "@type": "WebSite",
      "@id": "https://wmg.suuna.org/#website",
      "url": "https://wmg.suuna.org",
      "name": "The Whole Men Gathering",
      "description": description,
      "publisher": {
        "@id": "https://wmg.suuna.org/#organization"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://wholemengathering.org/#signup",
        "query-input": "required"
      }
    },
    {
      "@type": "WebPage",
      "@id": `${canonical}#webpage`,
      "url": canonical,
      "name": title,
      "isPartOf": {
        "@id": "https://wholemengathering.org/#website"
      },
      "about": {
        "@id": "https://wmg.suuna.org/#organization"
      },
      "description": description,
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://wholemengathering.org"
          }
        ]
      }
    },
    {
      "@type": "Person",
      "@id": "https://wholemengathering.org/#matthew",
      "name": "Matthew",
      "description": "Mentor and facilitator devoted to men's inner work and service to community.",
      "memberOf": {
        "@id": "https://wmg.suuna.org/#organization"
      }
    },
    {
      "@type": "Person", 
      "@id": "https://wholemengathering.org/#jesse",
      "name": "Jesse",
      "description": "Guide in embodiment and relational practice, weaving modern insight with perennial wisdom.",
      "memberOf": {
        "@id": "https://wmg.suuna.org/#organization"
      }
    },
    {
      "@type": "Person",
      "@id": "https://wholemengathering.org/#william", 
      "name": "William",
      "description": "Practitioner of contemplative arts, supporting men to live with clarity, courage and compassion.",
      "memberOf": {
        "@id": "https://wmg.suuna.org/#organization"
      }
    },
    {
      "@type": "Person",
      "@id": "https://wholemengathering.org/#yungen",
      "name": "Yungen", 
      "description": "Space-holder and circle convener, honoring the noble code through practical daily action.",
      "memberOf": {
        "@id": "https://wmg.suuna.org/#organization"
      }
    }
  ]
};
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png" />
    
    <meta name="generator" content={Astro.generator} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600&family=Manrope:wght@400;600&display=swap" rel="stylesheet">
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <!-- Theme color for green sections -->
    <meta name="theme-color" content="#0b1612" />
    
    <!-- Enhanced SEO meta -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="The Whole Men Gathering" />
    <meta property="og:description" content="Weaving ancient, contemporary and emergent wisdom for a manhood rooted in service to the whole." />
    <meta property="og:image" content="/og/wmg-hero.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    
    <!-- Import theme and reveal styles -->
    <link rel="stylesheet" href="/src/styles/theme.css" />
    <link rel="stylesheet" href="/src/styles/reveal.css" />
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/hero/hero-1920.jpg" as="image" type="image/jpeg" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
    
    <title>{title}</title>
  </head>
  <body class="bg-wmg-bg text-wmg-text antialiased font-body leading-relaxed">
    <slot />
    
    <!-- Vercel Analytics -->
    <Analytics />
    
    <!-- Initialize animations and analytics -->
    <script>
      import('/src/lib/animate.ts');
      import('/src/lib/pageAnalytics.ts').then(module => {
        if (module.initPageAnalytics) {
          module.initPageAnalytics();
        }
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --font-heading: 'Cormorant Garamond', serif;
    --font-body: 'Manrope', sans-serif;
  }

  html {
    scroll-behavior: smooth;
  }
  
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
  
  /* Typography */
  body {
    font-family: var(--font-body);
    font-weight: 400;
    color: #f5f5f0;
    background-color: #0a1f1a;
    line-height: 1.7;
  }

  h1, h2, h3 {
    font-family: var(--font-heading);
    font-weight: 600;
    letter-spacing: -0.01em;
    color: #f5f5f0;
  }

  /* Focus styles for accessibility */
  *:focus-visible {
    outline: 2px solid #d4af37;
    outline-offset: 2px;
  }
  
  /* Smooth transitions for interactive elements */
  a, button {
    transition: all 0.2s ease-in-out;
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .text-wmg-text\/90 {
      color: #f5f5f0 !important;
    }
    .text-wmg-text\/80 {
      color: #f5f5f0 !important;
    }
  }
</style>
